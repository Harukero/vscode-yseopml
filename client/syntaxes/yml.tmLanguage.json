        "option": {
            "patterns": [{
                "begin": "(?x)(-->|\\+\\+\\+|---|==>)\\s+(\\w+)\\s+",
                "end": "\\n+",
                "captures": {
                    "1": {
                        "name": "keyword.operator.yseop"
                    },
                    "2": {
                        "name": "entity.other.attribute-name"
                    }
                },
                "patterns": [
                    { "include": "#constants" },
                    { "include": "#inlineInstance" },
                    { "include": "#comments" },
                    { "include": "#strings" },
                    { "include": "#documentationString" },
                    { "include": "#granules" },
                    { "include": "#keywords" },
                    { "include": "#constants" },
                    { "include": "#operators" },
                    {
                        "begin": "\\{",
                        "end": "\\}",
                        "patterns": [
                            { "include": "#constants" },
                            { "include": "#comments" },
                            { "include": "#strings" },
                            { "include": "#keywords" },
                            { "include": "#granules" },
                            { "include": "#constants" },
                            { "include": "#operators" }
                        ]
                    }
                ]
            }]
        },
        "inlineInstance": {
            "patterns": [{
                "begin": "(?x) (->) \\s* \\b(\\w+)\\b (\\s+\\b([\\w\\\\:]+)\\b)?",
                "end": "(?=;)\\n*",
                "name": "entity.other.yseop",
                "captures": {
                    "1": {
                        "name": "keyword.operator.yseop"
                    },
                    "2": {
                        "name": "entity.name.type.yseop"
                    },
                    "4": {
                        "name": "entity.name.yseop"
                    }
                },
                "patterns": [
                    { "include": "#option" },
                    { "include": "#comments" },
                    { "include": "#granules" }
                ]
            }]
        },
        "constants": {
            "patterns": [{
                    "name": "constant.other.yml",
                    "match": "'d:\\d{4}-\\d{2}-\\d{2}'",
                    "comment": "Dates"
                },
                {
                    "name": "constant.numeric.yml",
                    "match": "\\b\\d+(\\.\\d+)?\\b",
                    "comment": "A simple integer or a decimal number"
                },
                {
                    "name": "constant.language.yml",
                    "match": "\\b(true|false|null)\\b",
                    "comment": "Pure constants."
                }
            ]
        },
        "preprocessing": {
            "patterns": [{
                    "begin": "@if",
                    "end": "@endif",
                    "beginCaptures": {
                        "0": {
                            "name": "meta.preprocessor.yseop"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "meta.preprocessor.yseop"
                        }
                    },
                    "patterns": [{
                            "match": "@else",
                            "name": "meta.preprocessor.yseop"
                        },
                        { "include": "#keywords" },
                        { "include": "#strings" },
                        { "include": "#constants" },
                        { "include": "#comments" },
                        { "include": "#operators" },
                        { "include": "#functions" }
                    ]
                },
                {
                    "match": "@pragma",
                    "include": "#functions",
                    "name": "meta.preprocessor.yseop"
                }
            ],
            "comment": "Preprocessing stuff"
        },
        "strings": {
            "name": "string.quoted.double.yml",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
                "name": "constant.character.escape.yml",
                "match": "\\\\."
            }],
            "comment": "All simple strings"

        },
        "documentationString": {
            "name": "string.quoted.triple.yml",
            "begin": "\"\"\"",
            "end": "\"\"\"",
            "patterns": [{
                "name": "constant.character.escape.yml",
                "match": "\\\\."
            }]
        },
        "textgranule-functions": {
            "patterns": [{
                "begin": "\\\\\\w+(::?\\w+)*\\s*\\(",
                "end": "\\)",
                "name": "entity.name.function.granule.yml",
                "comment": "A tag with arguments.",
                "patterns": [{
                        "match": "\\b(\\w+)\\b",
                        "name": "variable.parameter.yml",
                        "comment": "A parameter is just a string or a number"
                    },
                    { "include": "#strings" },
                    { "include": "#constants" }
                ]
            }]
        },
        "granules": {
            "patterns": [{
                "name": "source.granule.yml",
                "begin": "\\\\\\(",
                "end": "\\\\\\)",
                "patterns": [
                    { "include": "#keywords" },
                    { "include": "#textgranule-functions" },
                    { "include": "#tag" },
                    { "include": "#strings" },
                    { "include": "#constants" },
                    { "include": "#comments" },
                    { "include": "#operators" }
                ]
            }],
            "comment": "Text Granule blocks."
        },
        "comments": {
            "patterns": [{
                    "match": "(//).*",
                    "name": "comment.line.double-slash.yml",
                    "comment": "Single line comment."
                },
                {
                    "begin": "/\\*",
                    "end": "\\*/",
                    "name": "comment.block.yml",
                    "comment": "Multilines comments."
                }
            ]
        },
        "operators": {
            "patterns": [{
                "match": "(\\+\\+\\+|>|>=|<|<=|==|!=|==>|--?>|/|\\+|-|\\*|&&?|\\|\\|?|==?)",
                "name": "keyword.operator.yml",
                "comment": "Some of the operators that can be find in YML."
            }]
        },
        "functions": {
            "patterns": [{
                "begin": "\\b\\w+(::?\\w+)*\\s*\\(",
                "end": "\\)",
                "patterns": [{
                        "match": "\\b(\\w+|\\d+)\\b",
                        "name": "variable.parameter.yml",
                        "comment": "A parameter is just a string or a number"
                    },
                    { "include": "#strings" },
                    { "include": "#constants" }
                ],
                "name": "entity.name.function.yml",
                "comment": "A function call in YML."
            }]
        }

    },
    "scopeName": "source.yseop"
}